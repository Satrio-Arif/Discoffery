<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/_250sdp"
    android:layout_marginEnd="20dp"
    android:layout_height="@dimen/_160sdp"
    android:elevation="2dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/card">


    <ImageView
        android:id="@+id/photoToko"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:scaleType="fitXY"
        android:src="@drawable/itemshop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/namaToko"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="2"
        android:text="@string/jakarta_terancam_banjir_pada_tahun_2033"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photoToko"
        app:layout_constraintTop_toTopOf="@+id/photoToko" />

    <RatingBar
        android:id="@+id/ratingToko"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8sdp"
        android:isIndicator="true"
        android:max="5"
        app:layout_constraintStart_toStartOf="@+id/namaToko"
        app:layout_constraintTop_toBottomOf="@+id/namaToko" />


    <TextView
        android:id="@+id/addresstv"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="2"
        android:text="@string/address"
        android:textColor="#d3d3d3"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/alamatToko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photoToko">

    </TextView>

    <TextView
        android:id="@+id/alamatToko"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="2"
        android:text="@string/pondok_maharta_blok_a1_no_22"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/photoToko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photoToko" />




</androidx.constraintlayout.widget.ConstraintLayout>