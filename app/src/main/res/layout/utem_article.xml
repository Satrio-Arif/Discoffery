<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginStart="2dp"
    android:elevation="2dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/card">

    <ImageView
        android:id="@+id/imgItemPhoto"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="match_parent"
        android:contentDescription="TODO"
        android:src="@drawable/kopi_article"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJudulArtikel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="2"
        android:text="@string/jakarta_terancam_banjir_pada_tahun_2033"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemSource"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppins"
        android:maxLines="2"
        android:text="@string/sindo_news"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvJudulArtikel" />




</androidx.constraintlayout.widget.ConstraintLayout>