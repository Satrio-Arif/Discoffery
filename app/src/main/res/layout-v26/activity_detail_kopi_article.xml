<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailKopiArticle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/bannerKopiDetail"
            android:layout_width="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/kopidetail"
            app:layout_constraintBottom_toTopOf="@+id/judulArtikel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/judulArtikel"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/judul_Artikel"
            android:justificationMode="inter_word"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/isiArtikel"
            app:layout_constraintEnd_toEndOf="@+id/bannerKopiDetail"
            app:layout_constraintStart_toStartOf="@+id/bannerKopiDetail"
            app:layout_constraintTop_toBottomOf="@id/bannerKopiDetail" />

        <TextView
            android:id="@+id/isiArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical|end"
            android:justificationMode="inter_word"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:text="@string/isi_artikel"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/judulArtikel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/judulArtikel"
            app:layout_constraintTop_toBottomOf="@id/judulArtikel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>